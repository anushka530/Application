<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/header_bg"
        >
        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/logo_border"
            android:layout_centerVertical="true"

            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/avatar"
                app:tint="#c87e61" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_layout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                >

                <ImageView
                    android:id="@+id/profileimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/avatar"
                    app:tint="#b9866c" />

                <TextView
                    android:id="@+id/dname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toRightOf="@+id/profileimg"
                    android:ems="10"
                    android:text="Dummy Name"
                    android:textSize="18sp"
                    android:textColor="#302260"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/email_layout"
                android:layout_below="@+id/name_layout"
                android:layout_marginEnd="30dp"
                >

                <ImageView
                    android:id="@+id/emailimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/email"
                    app:tint="#b9866c" />

                <TextView
                    android:id="@+id/demail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toRightOf="@+id/emailimg"
                    android:ems="10"
                    android:text="Designation"
                    android:textSize="18sp"
                    android:textColor="#302260"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/email_layout"
                android:layout_marginEnd="30dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/prefer_layout"
                    android:background="@drawable/input_bg">

                    <ImageView
                        android:id="@+id/preferimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/preference" />

                    <TextView
                        android:id="@+id/prefer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toRightOf="@+id/preferimg"
                        android:background="@null"
                        android:hint="Preference"
                        android:inputType="text"
                        android:textColorHint="#de765c"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/edit_layout"
                    android:layout_toRightOf="@+id/prefer_layout"
                    android:background="@drawable/input_bg">

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/pen" />

                    <TextView
                        android:id="@+id/edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/edit"
                        android:background="@null"
                        android:hint="Edit"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:inputType="text"
                        android:textColorHint="#de765c"
                        android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header1"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/headerbelow_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="0dp"
                >

                <RelativeLayout
                    android:id="@+id/slide"
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:background="#e86144" />

                <ImageView
                    android:id="@+id/team_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/slide"
                    android:src="@drawable/team"
                    app:tint="#e86144" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/team_img"
                    android:text="YOUR TEAM"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/logo_border"
                    android:backgroundTint="#f5f0f2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:id="@+id/team_next"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/next"
                        app:tint="#e05b36" />
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:id="@+id/slide1"
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:background="#e86144"/>

                <ImageView
                    android:id="@+id/report_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/slide1"
                    android:src="@drawable/schedule"
                    app:tint="#e86144" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/report_img"
                    android:text="REPORT"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/logo_border"
                    android:backgroundTint="#f5f0f2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/next"
                        app:tint="#e05b36" />
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:id="@+id/slide2"
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:background="#e86144"/>
                <ImageView
                    android:id="@+id/schedule_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/calendar"
                    android:layout_toRightOf="@+id/slide2"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    app:tint="#e86144" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/schedule_img"
                    android:text="SCHEDULE"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/logo_border"
                    android:backgroundTint="#f5f0f2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:id="@+id/schedule_next"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/next"
                        app:tint="#e05b36" />
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:id="@+id/slide3"
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:background="#e86144"/>
                <ImageView
                    android:id="@+id/camp_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/campaign"
                    android:layout_toRightOf="@+id/slide3"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    app:tint="#e86144" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/camp_img"
                    android:text="CAMPAIGN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/logo_border"
                    android:backgroundTint="#f5f0f2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:id="@+id/camp_next"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/next"
                        app:tint="#e05b36" />
                </RelativeLayout>



            </RelativeLayout>




        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>